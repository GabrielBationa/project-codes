// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
    double length, width, radius, area_rectangle, area_circle;
    
    cout << "Enter the rectangle length: ";
    cin >> length;
    cout << "Enter the rectangle width: ";
    cin >> width;
    cout << "Enter the circle radius: ";
    cin >> radius;
    
    
    area_rectangle = length * width;
    area_circle = 3.14159 * radius * radius; 
    
    cout << "Area of the rectangle: " << area_rectangle << endl;
    cout << "Area of the circle: " << area_circle << endl;
    
    return 0;
}
